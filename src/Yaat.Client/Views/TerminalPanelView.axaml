<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Yaat.Client.ViewModels"
             x:Class="Yaat.Client.Views.TerminalPanelView">

    <DockPanel>

        <!-- Header -->
        <Grid DockPanel.Dock="Top"
              ColumnDefinitions="*,Auto"
              Margin="4,2">
            <TextBlock Grid.Column="0"
                       Text="Terminal"
                       FontWeight="Bold"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Foreground="Gray" />
            <Button Grid.Column="1"
                    Content="{Binding IsTerminalDocked,
                        Converter={x:Static vm:DockButtonConverter.Instance}}"
                    Command="{Binding ToggleTerminalDockCommand}"
                    FontSize="11"
                    Padding="6,2" />
        </Grid>

        <!-- Scrolling terminal text (read-only, selectable) -->
        <TextBox x:Name="TerminalTextBox"
                 Text="{Binding TerminalText, Mode=OneWay}"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 FontFamily="Consolas"
                 FontSize="12"
                 Foreground="LightGray"
                 Background="#1A1A1E"
                 BorderThickness="0"
                 TextWrapping="Wrap"
                 Padding="4" />

    </DockPanel>
</UserControl>
